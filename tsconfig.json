{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es2020"
  },
  "include": ["src/**/*.ts", "src/test.js"],
  "exclude": ["node_modules"]
}
